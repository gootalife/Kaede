@page "/IdReverseLookup"

<h1 class="pb-4">ID逆引き</h1>

<form class="form-inline" @onsubmit="Search">
    <input @ref="idInput" type="text" class="form-control mr-sm-2" @bind="id" @bind:event="oninput" placeholder="モンスターID">
    <button class="btn btn-primary" @onclick="Search">検索</button>
</form>

<br />
@if(name != null) {
    <table class="table table-sm table-bordered">
        <thead class="thead-dark">
            <tr>
                <th class="id text-center">ID</th>
                <th class="text-center">Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="align-middle text-center">@id</td>
                <td class="align-middle text-center">
                    @name
                    <button type="button" class="btn btn-primary btn-sm float-right" @onclick="@(async () => {
                                                                                                     await IJSRuntime.CopyToClipBoard(name);
                                                                                                     await IJSRuntime.Alert("コピーしました。");
                                                                                                 })">


                        Copy
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
}
